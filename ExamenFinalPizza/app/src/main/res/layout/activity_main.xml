<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="com.example.anaguz.examenfinalpizza.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="14dp">

        <TextView
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:text="¡¡PIZZERIA ONLINE!!"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            />

        <ImageView
            android:src="@drawable/logopizza"
            android:layout_width="117dp"
            android:layout_height="113dp"


            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="14dp"
        >

        <Spinner
            android:layout_height="wrap_content"
            android:id="@+id/swpinner"
            android:layout_width="200dp"
            android:layout_weight="1"
            >
        </Spinner>
        <RadioGroup
            android:id="@+id/tarifasnyu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/enLocal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="En Local"/>

            <RadioButton
                android:id="@+id/EnDomicilio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Envio Domicilio"/>
        </RadioGroup>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="14dp">

        <CheckBox
            android:id="@+id/Grande"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="+Grande"/>

        <CheckBox
            android:id="@+id/Extra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="+Ingrediente"/>

        <CheckBox
            android:id="@+id/ExtraQueso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="+Extra Queso"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp">

        <EditText
            android:id="@+id/numeroUnidades"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Numero de unidades"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
       >

        <Button
            android:id="@+id/button"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="Button"
            android:layout_marginRight="20dp"/>

        <TextView
            android:id="@+id/textView"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:text="TextView"
            android:gravity="center"/>

    </LinearLayout>


</LinearLayout>
