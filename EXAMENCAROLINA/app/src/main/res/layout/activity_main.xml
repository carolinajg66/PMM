<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.anaguz.examencarolina.MainActivity">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:text="¡¡PIZZERIA ONLINE!!"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            />

        <ImageView
            android:src="@drawable/logopizza"
            android:layout_width="117dp"
            android:layout_height="113dp"


            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
         >

        <Spinner
            android:layout_height="wrap_content"
            android:id="@+id/swpinner"
            android:layout_width="200dp"
            android:layout_weight="1"
            >
        </Spinner>
        <RadioGroup
            android:id="@+id/tarifasnyu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/enLocal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="En Local"/>

            <RadioButton
                android:id="@+id/EnDomicilio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Envio Domicilio"/>
        </RadioGroup>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/Grande"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="+Grande"/>

        <CheckBox
            android:id="@+id/Extra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="+Ingrediente"/>

        <CheckBox
            android:id="@+id/ExtraQueso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="+Extra Queso"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/numeroUnidades"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Numero de unidades"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="bottom"
        android:layout_gravity="center_horizontal">

        <Button
            android:id="@+id/hacerCalculos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hacer Calculos"/>
    </LinearLayout>

</LinearLayout>
